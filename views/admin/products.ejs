<%- include('partials/header') %>
</head>
<body>
  <%- include('partials/nav') %>

<h1>products</h1>
<table class="all-products">
    
    <tbody>
  <% products.forEach(function(product) { %>
  <tr class="product">
    
    <td><img src="data:image/<%=product.img.contentType%>;base64,<%=product.img.data.toString('base64')%>"/></td>
    <td><%=product.title%></td>
    <td><%=product.quantity%> in stock</td>
    <td><%=product.price%>$</td>

      <td class="btns">
        <a href="/admin/edit/<%=product._id%>" class="btn btn-float">
        <i class="fas fa-edit"></i>
        </a>
        
        <form action="/admin/delete/<%=product._id%>" method="post" id="delete-form">
        <input type="hidden" name="_method" value="DELETE">
         <button type="submit" class="btn red">
             <i class="fas fa-trash"></i>
         </button>
        </form>

    </td>
      
  </tr>
  <% }) %>
</div>

<%- include('partials/footer') %>